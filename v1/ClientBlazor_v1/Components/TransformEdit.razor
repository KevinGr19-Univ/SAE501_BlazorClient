@using ClientBlazor_v1.Components.Utils
@using ClientBlazor_v1.Interop.Utils
@using System.ComponentModel

<FSubWindow>
    <Header><span>Transform</span></Header>
    <Content>
        <div>
            <b>Position</b>
            <div class="sgap-row">
                <span>
                    <label class="xaxis">X:&nbsp;</label>
                    <input type="number" class="number_box" @bind-value=TransformInterop.PosX>
                </span>
                <span>
                    <label class="yaxis">Y:&nbsp;</label>
                    <input type="number" class="number_box" @bind-value=TransformInterop.PosY>
                </span>
                <span>
                    <label class="zaxis">Z:&nbsp;</label>
                    <input type="number" class="number_box" @bind-value=TransformInterop.PosZ>
                </span>
            </div>
        </div>
        <div>
            <b>Rotation</b>
            <div class="sgap-row">
                <span>
                    <label class="xaxis">X:&nbsp;</label>
                    <input type="number" class="number_box" @bind-value=TransformInterop.RotX>
                </span>
                <span>
                    <label class="yaxis">Y:&nbsp;</label>
                    <input type="number" class="number_box" @bind-value=TransformInterop.RotY>
                </span>
                <span>
                    <label class="zaxis">Z:&nbsp;</label>
                    <input type="number" class="number_box" @bind-value=TransformInterop.RotZ>
                </span>
            </div>
        </div>
        <div>
            <b>Échelle</b>
            <div class="sgap-row">
                <span>
                    <label class="xaxis">X:&nbsp;</label>
                    <input type="number" class="number_box" @bind-value=TransformInterop.ScaleX>
                </span>
                <span>
                    <label class="yaxis">Y:&nbsp;</label>
                    <input type="number" class="number_box" @bind-value=TransformInterop.ScaleY>
                </span>
                <span>
                    <label class="zaxis">Z:&nbsp;</label>
                    <input type="number" class="number_box" @bind-value=TransformInterop.ScaleZ>
                </span>
            </div>
        </div>
    </Content>
</FSubWindow>

@inherits NotifiedComponent
@code {
    [Parameter]
    public TransformInterop TransformInterop { get; set; }

    protected override INotifyPropertyChanged Notifier => TransformInterop;
}
