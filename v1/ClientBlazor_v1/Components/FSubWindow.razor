<div class="fsubwindow collapse_box @(Collapsed ? "collapsed" : "")">
    <div class="fsubwindow_header collapse_box_header" @onclick=Toggle>
        @Header
    </div>
    <div class="fsubwindow_content collapse_box_content">
        @Content
    </div>
</div>

@code {
    [Parameter]
    public RenderFragment Header { get; set; }

    [Parameter]
    public RenderFragment Content { get; set; }

    public bool Collapsed = false;

    public void Toggle()
    {
        Collapsed = !Collapsed;
    }
}
