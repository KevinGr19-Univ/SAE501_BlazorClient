<div class="top-row ps-3 navbar navbar-dark" @onclick="ToggleNavMenu">
    <div class="container-fluid">
        @if(collapseNavMenu) {<i class="bi bi-box text-white"></i>}
        else {<span class="navbar-brand">Object Manager</span>}
    </div>
</div>

<div class="@(collapseNavMenu ? "nav-collapsed" : "") nav-scrollable">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                <span class="bi bi-house" aria-hidden="true"></span> <span class="nav-item-text">Bâtiments et salles</span>
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/room_types" Match="NavLinkMatch.All">
                <span class="bi bi-list-ul" aria-hidden="true"></span> <span class="nav-item-text">Types de salles</span>
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/room_objects" Match="NavLinkMatch.All">
                <span class="bi bi-door-closed" aria-hidden="true"></span> <span class="nav-item-text">Objets</span>
            </NavLink>
        </div>
    </nav>
</div>

<style>
    .navbar{
        user-select: none;
        cursor: pointer;
    }

    .nav-scrollable{
        background: #333;
        user-select: none;
    }

    .nav-collapsed .nav-item-text{
        display: none;
    }

    span.bi{
        transform: scale(1.4) translate(0, -80%);
    }
</style>

@code {
    private bool collapseNavMenu = false;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
